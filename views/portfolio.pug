      // Contact Section
      section.contact#contactme
        h1 Contact Me

        // Message will appear here after sending
        p#formMessage(style='padding:10px; background:#d4edda; color:#155724; margin-bottom:10px; border-radius:5px; display:none;')

        form#contactForm.contact-form
          input(type='text', name='name', placeholder='Your Name', required='')
          input(type='email', name='email', placeholder='Your Email', required='')
          textarea(name='message', placeholder='Your Message', rows='5', required='')
          button(type='submit') Send Message

        // AJAX script to handle form submission
        script.
          const form = document.getElementById('contactForm');
          const formMessage = document.getElementById('formMessage');

          form.addEventListener('submit', async (e) => {
            e.preventDefault(); // Prevent default form submission

            const formData = {
              name: form.name.value,
              email: form.email.value,
              message: form.message.value
            };

            try {
              const res = await fetch('/contactme', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
              });

              const result = await res.json();

              formMessage.textContent = result.message;
              formMessage.style.display = 'block';

              if (result.success) {
                form.reset(); // clear form fields
              }
              
            } catch (err) {
              formMessage.textContent = '‚ùå Something went wrong. Please try again.';
              formMessage.style.display = 'block';
            }
          });

