    // Scripts OUTSIDE main
    script.
      document.addEventListener("DOMContentLoaded", () => {
        const form = document.getElementById("contactForm");
        const formMessage = document.getElementById("formMessage");

        // Turn off default browser validation
        form.setAttribute("novalidate", true);

        form.addEventListener("submit", async (e) => {
          e.preventDefault();

          const name = form.name.value.trim();
          const email = form.email.value.trim();
          const message = form.message.value.trim();

          // Remove red borders first
          form.name.classList.remove("input-error");
          form.email.classList.remove("input-error");
          form.message.classList.remove("input-error");

          let hasError = false;

          // Check empty fields
          if (!name) {
            form.name.classList.add("input-error");
            hasError = true;
          }
          if (!email) {
            form.email.classList.add("input-error");
            hasError = true;
          }
          if (!message) {
            form.message.classList.add("input-error");
            hasError = true;
          }

          // Email format validation
          const emailRegex = /^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/;
          if (email && !emailRegex.test(email)) {
            form.email.classList.add("input-error");
            hasError = true;
          }

          const formData = new FormData(form);

          try {
            const res = await fetch(form.action, {
              method: "POST",
              body: formData,
              headers: { "Accept": "application/json" }
            });

            if (res.ok) {
              formMessage.textContent = "‚úÖ Thank you! Your message has been sent.";
              formMessage.style.background = "#d4edda";
              formMessage.style.color = "#155724";
              formMessage.style.display = "block";
              form.reset();
            } else {
              formMessage.textContent = "‚ùå Something went wrong.";
              formMessage.style.background = "#f8d7da";
              formMessage.style.color = "#721c24";
              formMessage.style.display = "block";
            }
          } catch (err) {
            formMessage.textContent = "‚ùå Something went wrong.";
            formMessage.style.background = "#f8d7da";
            formMessage.style.color = "#721c24";
            formMessage.style.display = "block";
          }
        });
      });

